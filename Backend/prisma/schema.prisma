// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model registrar{
  id Int @id @default(autoincrement())
  contrasena String
  correo    String
  usuario usuario[]
}

model usuario{
  id Int @id @default(autoincrement())
  nombre String
  apellido1 String
  apellido2 String
  registrar registrar @relation(fields: [registrar_id], references: [id])
  registrar_id Int
}

model cliente{
  id Int @id @default(autoincrement())
  nombre String
  apellido1 String
  apellido2 String
  direccion String
}

model vendedor{
  id Int @id @default(autoincrement())
  nombre String
  apellido1 String
  apellido2 String
}

model factura{
  id Int @id @default(autoincrement())
  nombre_cliente String
  estado Boolean
  fecha DateTime
  total     BigInt
}

model factura_detalle_factura{
  id Int @id @default(autoincrement())
  factura_id Int
  detalle_factura detalle_factura @relation(fields: [detalle_factura_id],references: [id])
  detalle_factura_id Int
}

model detalle_factura{
  id Int @id @default(autoincrement())
  cantidad Int
  factura_detalle_factura factura_detalle_factura[]
}

model producto{
  id Int @id @default(autoincrement())
  categoria String
  nombre String
  cantidad   Int
  precio_unitario BigInt
}

model promocion{
  id Int @id @default(autoincrement())
  nombre_promocion String
  descuento Int //Porcentaje de Descuento
  motivo_promocion String
}





